{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Klog",
    "repository": {
        "tag": {
            "name": "keyword.other.tag.klog",
            "match": "#[\\p{L}\\d_]+"
        },
        "summary-behind-entry": {
            "name": "string.unquoted.summary.behind-entry.klog",
            "begin": "\\G",
            "end": "$",
            "patterns": [
                {
                    "include": "#tag"
                }
            ]
        },
        "timespan": {
            "name": "markupk.other.timespan.klog",
            "match": "(<?(?:[01]?\\d|2[0-3]):[0-5]\\d(?:am|pm)?>?) ?- ?(<?(?:[01]?\\d|2[0-3]):[0-5]\\d(?:am|pm)?>?)"
        },
        "timespan-open-ended": {
            "name": "markup.other.timespan.open-ended.klog",
            "match": "((<?(?:[01]?\\d|2[0-3]):[0-5]\\d(?:am|pm)?>?) ?- ?\\?)"
        },
        "duration": {
            "match": "(?:(\\+?(?:\\d+h\\d+m|\\d+h|\\d+m))|(-(?:\\d+h\\d+m|\\d+h|\\d+m)))",
            "captures": {
                "1": {
                    "name": "markup.other.duration.positive.klog"
                },
                "2": {
                    "name": "markup.other.duration.negative.klog"
                }
            }
        },
        "record": {
            "begin": "^(\\d{4}-\\d{2}-\\d{2}|\\d{4}\\\\\\d{2}\\\\\\d{2})(?:\\s+\\((\\d+h\\d+m|\\d+h|\\d+m)!\\))?",
            "beginCaptures": {
                "1": {
                    "name": "markup.heading.date.klog"
                },
                "2": {
                    "name": "markup.other.duration.should-total.klog"
                }
            },
            "patterns": [
                {
                    "name": "string.unquoted.summary.after-date.klog",
                    "begin": "\\G",
                    "end": "(?=^$|^(?: {2,4}|\t))",
                    "patterns": [
                        {
                            "name": "invalid.illegal.summary.whitespace-prefix.klog",
                            "match": "^ \\w"
                        },
                        {
                            "include": "#tag"
                        }
                    ]
                },
                {
                    "begin": "^(?:\t| {2,4})",
                    "end": "$",
                    "patterns": [
                        {
                            "include": "#timespan"
                        },
                        {
                            "include": "#timespan-open-ended"
                        },
                        {
                            "include": "#duration"
                        },
                        {
                            "name": "string.unquoted.summary.behind-entry.klog",
                            "begin": " +",
                            "end": "$",
                            "patterns": [
                                {
                                    "include": "#tag"
                                }
                            ]
                        }
                    ]
                }
            ],
            "end": "^\\s*$"
        }
    },
    "patterns": [
        {
            "include": "#record"
        }
    ],
    "scopeName": "source.klog"
}
