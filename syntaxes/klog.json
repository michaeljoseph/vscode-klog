{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Klog",
    "repository": {
        "tag": {
            "name": "keyword.other.tag.klog",
            "match": "#[a-zA-Z\\d_]+"
        },
        "summary-behind-entry": {
            "name": "string.unquoted.summary.behind-entry.klog",
            "begin": "\\G",
            "end": "$",
            "patterns": [
                {
                    "include": "#tag"
                }
            ]
        },
        "timespan": {
            "begin": "(?<=^(?:\t| {2,4}))((<?(?:[01]?\\d|2[0-3]):[0-5]\\d(?:am|pm)?>?)\\s*-\\s*(<?(?:[01]?\\d|2[0-3]):[0-5]\\d(?:am|pm)?>?))\\s",
            "beginCaptures": {
                "1": {
                    "name": "markup.other.timespan.klog"
                }
            },
            "end": "$",
            "patterns": [
                {
                    "include": "#summary-behind-entry"
                }
            ]
        },
        "timespan-open-ended": {
            "begin": "(?<=^(?:\t| {2,4}))((<?(?:[01]?\\d|2[0-3]):[0-5]\\d(?:am|pm)?>?)\\s*-\\s*\\?)\\s",
            "beginCaptures": {
                "1": {
                    "name": "markup.other.timespan.open-ended.klog"
                }
            },
            "end": "$",
            "patterns": [
                {
                    "include": "#summary-behind-entry"
                }
            ]
        },
        "duration": {
            "begin": "(?<=^(?:\t| {2,4}))(?:(\\+?(?:\\d+h\\d+m|\\d+h|\\d+m))|(-(?:\\d+h\\d+m|\\d+h|\\d+m)))\\s",
            "beginCaptures": {
                "1": {
                    "name": "markup.other.duration.positive.klog"
                },
                "2": {
                    "name": "markup.other.duration.negative.klog"
                }
            },
            "end": "$",
            "patterns": [
                {
                    "include": "#summary-behind-entry"
                }
            ]
        }
    },
    "patterns": [
        {
            "begin": "^(\\d{4}-\\d{2}-\\d{2}|\\d{4}\\\\\\d{2}\\\\\\d{2})(?:\\s+\\((\\d+h\\d+m|\\d+h|\\d+m)!\\))?",
            "beginCaptures": {
                "1": {
                    "name": "markup.heading.date.klog"
                },
                "2": {
                    "name": "markup.other.duration.should-total.klog"
                }
            },
            "patterns": [
                {
                    "name": "string.unquoted.summary.after-date.klog",
                    "begin": "\\G",
                    "end": "(?=^$|^(?: {2,4}|\t))",
                    "patterns": [
                        {
                            "name": "invalid.illegal.summary.whitespace-prefix.klog",
                            "match": "^ \\w"
                        },
                        {
                            "include": "#tag"
                        }
                    ]
                },
                {
                    "begin": "^(?:\t| {2,4})",
                    "end": "$",
                    "patterns": [
                        {
                            "match": "(<)\\d\\d:\\d\\d(>)",
                            "captures": {
                                "1": {
                                    "name": "invalid.illegal.timespan.arrow.klog"
                                },
                                "2": {
                                    "name": "invalid.illegal.timespan.arrow.klog"
                                }
                            }
                        },
                        {
                            "include": "#timespan"
                        },
                        {
                            "include": "#timespan-open-ended"
                        },
                        {
                            "include": "#duration"
                        }
                    ]
                }
            ],
            "end": "^\\s*$"
        }
    ],
    "scopeName": "source.klog"
}
